<div class="col-md-8 col-xl-6 chat">
    <div class="card">
        <div class="card-header msg_head">
            <div class="d-flex bd-highlight">
                <% if current_user.id.eql?(1) %>
                    <div class="img_cont">
                        <%= image_tag 'dharinsir.jpeg', class: 'rounded-circle user_img'%>
                        <span class="online_icon"></span>
                    </div>
                    <div class="user_info">
                        <span>Dharin Rajgor</span>
                        <p>10+ Messages</p>
                    </div>
                <% else %>
                    <div class="img_cont">
                        <%= image_tag 'techcompose.png', class: 'rounded-circle user_img'%>
                        <span class="online_icon"></span>
                    </div>
                    <div class="user_info">
                        <span>TechCompose solution</span>
                        <p>100+ Messages</p>
                    </div>
                <% end %>
                <div class="video_cam">
                    <span><i class="fas fa-video"></i></span>
                    <span><i class="fas fa-phone"></i></span>
                </div>
            </div>
            <span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
            <div class="action_menu">
                <ul>
                    <li><i class="fas fa-user-circle"></i> View profile</li>
                    <li><i class="fas fa-users"></i> Add to close friends</li>
                    <li><i class="fas fa-plus"></i> Add to group</li>
                    <li><i class="fas fa-ban"></i> Block</li>
                </ul>
            </div>
        </div>
        <div class="card-body msg_card_body">
            <%= render @messages %>
        </div>
        <div class="card-footer">
            <div class="input-group">
                <div class="input-group-append">
                    <span class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
                </div>
                <form style="width: 77%">
                    <textarea name="" data-behavior="room_speaker" class="form-control type_msg" placeholder="Type your message..."></textarea>
                </form>
                <div class="input-group-append">
                    <span class="input-group-text send_btn"><i class="fas fa-location-arrow"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
<%= hidden_field_tag 'current-user', current_user.id if current_user.present?%>